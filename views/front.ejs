<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Login or Register</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/css/bulma.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript">
        $(document).ready(function(){

        });
    </script> 
</head>
<body>
    <div style = "display:none">
            <%- JSON.stringify(messages) %>
    </div>
    <section class = "hero is-black">
        <div class = "hero-body">
            <div class = "columns">
                <div class = "column">
                    <div class = "container">
                        <p class = "title">Login</p>
                    </div>
                </div>
                <div class = "column">
                    <div class = "container">
                        <p class = "title">Register</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class = "columns">
        <div class = "container">
            <div class = "column">
                <div class = "container">
                    <div class = "tile">
                        <% if(messages.login) { %>
                            <% for (var x of messages.login) { %>
                                <p><%= x %></p>
                            <% } %>
                        <% } %>
                        <form method = "post" action = "/login">
                            <label for = "login_email">Email: </label>
                            <input type = "email" name = "login_email">
                            <label for = "login_password">Password: </label>
                            <input type = "text" name = "login_password">
                            <button class = "button">Login</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class = "column">
                <div class = "container">
                    <div class = "tile">
                        <% if(messages.registration) { %>
                            <% for (var x of messages.registration) { %>
                            <p class = "title is-6 is-warning"><%= x %><p>
                            <% } %>
                        <% } %>
                        <form method = "post" action = "/register">
                            <label for = "name">Name: </label>
                            <input type = "text" name = "name">
                            <label for = "email">Email: </label>
                            <input type = "text" name = "email">
                            <label for = "password">Password: </label>
                            <input type = "text" name = "password">
                            <button>Register</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>